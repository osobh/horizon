{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Horizon",
  "version": "0.1.0",
  "identifier": "ai.hpc.horizon",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev --prefix web",
    "beforeBuildCommand": "npm run build --prefix web"
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "",
      "endpoints": [
        "https://releases.hpc-ai.io/horizon/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Horizon - HPC-AI Platform",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Unified HPC-AI Platform",
    "longDescription": "Horizon provides a single pane of glass to the entire HPC-AI stack, from notebook IDE to cluster management to ML training.",
    "category": "DeveloperTool",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
