# Production Environment Configuration  
# Optimized for production deployment and demos

# Network - Your actual network configuration
STRATOSWARM_HOST_IP=192.168.1.4
STRATOSWARM_PUBLIC_IP=
STRATOSWARM_ALLOW_EXTERNAL=true
STRATOSWARM_NETWORK_INTERFACE=eth0

# Ports - Standard production ports
VISUAL_EDITOR_PORT=8080
VISUAL_EDITOR_FRONTEND_PORT=3000
GRAFANA_PORT=3000
PROMETHEUS_PORT=9091
LOKI_PORT=3100

# Demo Settings - Production showcase
DEMO_MODE=production
DEMO_DURATION_MINUTES=30
DEMO_NODE_COUNT=5
DEMO_GPU_NODES=2
DEMO_SIMULATED_NODES=false

# Performance - Production targets
DEMO_TARGET_GPU_UTILIZATION=95.0
DEMO_TARGET_CONSENSUS_LATENCY_US=800
DEMO_TARGET_THROUGHPUT_TASKS_PER_SEC=100000

# Security - Production ready
STRATOSWARM_AUTH_ENABLED=true
STRATOSWARM_JWT_SECRET=production-secret-key-change-me
GRAFANA_PASSWORD=secure-grafana-password
STRATOSWARM_CORS_ORIGINS=http://192.168.1.4:3000

# Logging - Production appropriate
RUST_LOG=info
STRATOSWARM_LOG_LEVEL=info

# Frontend URLs - Production network
VITE_API_BASE_URL=http://192.168.1.4:8080
VITE_WEBSOCKET_URL=ws://192.168.1.4:8080
VITE_GRAFANA_URL=http://192.168.1.4:3000
VITE_PROMETHEUS_URL=http://192.168.1.4:9091

# Resource Limits - Production sizing
SWARMLET_MEMORY_LIMIT=4G
SWARMLET_CPU_LIMIT=4.0
GRAFANA_MEMORY_LIMIT=1G
PROMETHEUS_MEMORY_LIMIT=2G

# Cluster Configuration
CLUSTER_COORDINATOR_HOST=192.168.1.4
CLUSTER_COORDINATOR_PORT=7946
NODE_ROLE=coordinator
ENABLE_NODE_DISCOVERY=true