# Development Environment Configuration
# Optimized for local development and testing

# Network - Local development
STRATOSWARM_HOST_IP=localhost
STRATOSWARM_ALLOW_EXTERNAL=false

# Ports - Development friendly
VISUAL_EDITOR_PORT=3001
VISUAL_EDITOR_FRONTEND_PORT=3000
GRAFANA_PORT=3002
PROMETHEUS_PORT=9091
LOKI_PORT=3100

# Demo Settings - Quick testing
DEMO_MODE=development
DEMO_DURATION_MINUTES=10
DEMO_NODE_COUNT=2
DEMO_SIMULATED_NODES=true

# Performance - Lower targets for dev
DEMO_TARGET_GPU_UTILIZATION=70.0
DEMO_TARGET_CONSENSUS_LATENCY_US=5000

# Security - Relaxed for development
STRATOSWARM_AUTH_ENABLED=false
STRATOSWARM_CORS_ENABLED=true
STRATOSWARM_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging - Verbose for debugging
RUST_LOG=debug
STRATOSWARM_LOG_LEVEL=debug

# Frontend URLs - Local development
VITE_API_BASE_URL=http://localhost:3001
VITE_WEBSOCKET_URL=ws://localhost:3001
VITE_GRAFANA_URL=http://localhost:3002
VITE_PROMETHEUS_URL=http://localhost:9091